{{ define "head" }}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="Version control for dotfiles">
  <title>{{ .Title }}</title>
  <link rel="stylesheet" type="text/css" href="/style.css" />
</head>
<style>
 {{ if not .Dark }}
 :root {
     --background: #fffffe;
     --headline: #181818;
     --paragraph: #2e2e2e;
     --highlight: #4fc4cf;
     --main: #f2eef5;
     --secondary: #994ff3;
     --tertiary: #fbdd74;
 }
 {{ else }}
 :root {
     --background: #16161a;
     --headline: #fffffe;
     --paragraph: #a7a9be;
     --highlight: #7f5af0;
     --main: #242526;
     --secondary: #2cb67d;
     --tertiary: #ff4b55;
 }
 {{ end }}
</style>
{{ end }}
