<main>
  {{ template "file_content" . }}
  {{ if .Data.current }}
  <strong>Current revision</strong>
  {{ else if .Owned }}
  <form method="post" class="empty">
    <button class="success">Restore</button>
  </form>
  {{ end }}
  <div class="commit-info">
    <p>{{ .Data.timestamp }}</p>
    <p>
      {{ if .Data.forkedFrom }}
      <a href="{{ .Data.message }}">Forked from</a>
      {{ else }}
      <em>{{ .Data.message }}</em>
      {{ end }}
    </p>
  </div>
</main>
