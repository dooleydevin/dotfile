{{ template "head" . }}
<body>
  {{ template "nav" . }}
  <h1>
    {{ $hash := .Data.hash }}
    <a href="/{{ .Vars.username }}/{{ .Vars.alias }}">
      {{ .Vars.alias -}}
    </a> @ {{ slice $hash 0 7 }}
  </h1>
  {{ template "file_content" . }}
  <p>{{ .Data.timestamp }}</p>
  <p><em>{{ .Data.message }}</em></p>
  {{ if .Data.current }}
  <strong>Current revision</strong>
  {{ else if .Owned }}
  <form method="post" class="empty">
    <button class="success">Restore</button>
  </form>
  {{ end }}
</body>
